<Page x:Class="RegIN_Toshmatov.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:RegIN_Toshmatov.Pages"
      xmlns:uc="clr-namespace:RegIN_Toshmatov.Elements"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login" Background="White">

    <Grid>
        <Grid Height="400"
              VerticalAlignment="Center"
              HorizontalAlignment="Center"
              Width="300">
            <Grid>
                <Image x:Name="User"
                       HorizontalAlignment="Center"
                       Height="100"
                       Margin="32"
                       VerticalAlignment="Top"
                       Width="100"
                       Source="/RegIN_Toshmatov;component/Images/ic-userr.png">
                    <Image.Clip>
                        <EllipseGeometry RadiusX="50"
                                         RadiusY="50"
                                         Center="50,50"/>
                    </Image.Clip>
                </Image>

                <Label x:Name="lNameUserName"
                       Margin="10,137,10,0"
                       HorizontalContentAlignment="Center"
                       Content=""
                       VerticalAlignment="Top"/>

                <Label Content="Enter login:"
                       Margin="10,161,10,0"
                       VerticalAlignment="Top"/>

                <TextBox x:Name="tBlogin"
                         Height="23"
                         Margin="10,185,10,0"
                         TextWrapping="Wrap"
                         Text=""
                         VerticalAlignment="Top"
                         KeyUp="SetLogin"
                         LostFocus="SetLogin"/>

                <uc:ElementCapture x:Name="Capture"
                                   HorizontalAlignment="Center"
                                   Width="280"
                                   Margin="10,213,10,0"
                                   Height="100"
                                   VerticalAlignment="Top"/>

                <Label Content="Enter password:"
                       Margin="10,318,10,0"
                       VerticalAlignment="Top"/>

                <PasswordBox x:Name="tbPassword"
                             Margin="10,342,95,0"
                             VerticalAlignment="Top"/>

                <Label Content="Forgor your password?"
                       Margin="0,373,10,0"
                       VerticalAlignment="Top"
                       Foreground="#FF673AB7"
                       FontSize="10"
                       MouseDown="RecoveryPassword"
                       HorizontalAlignment="Left"
                       Width="110"/>

                <Label Content="Registration"
                       Margin="0,373,10,0"
                       VerticalAlignment="Top"
                       Foreground="#FF673AB7"
                       FontSize="10"
                       MouseDown="OpenRegion"
                       HorizontalAlignment="Right"
                       Width="62"/>

                <Label Content="Quick PIN Login"
       Margin="0,400,10,0"
       VerticalAlignment="Top"
       Foreground="#FF673AB7"
       FontSize="10"
       MouseDown="OpenPinLogin"
       HorizontalAlignment="Right"/>
            </Grid>
        </Grid>
    </Grid>
</Page>