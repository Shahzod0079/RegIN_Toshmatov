<Page x:Class="RegIN_Toshmatov.Pages.PinCode"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PinCode" Background="White">

    <Grid>
        <Grid Height="250" VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleText" Text="Create 4-digit PIN code" 
                       FontSize="16" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,20,0,20"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <PasswordBox x:Name="PinBox1" Width="40" Height="40" FontSize="20" 
                            MaxLength="1" HorizontalAlignment="Center" 
                            KeyUp="PinBox_KeyUp" PasswordChar="*"/>
                <PasswordBox x:Name="PinBox2" Width="40" Height="40" FontSize="20" 
                            MaxLength="1" HorizontalAlignment="Center" Margin="10,0,10,0"
                            KeyUp="PinBox_KeyUp" PasswordChar="*"/>
                <PasswordBox x:Name="PinBox3" Width="40" Height="40" FontSize="20" 
                            MaxLength="1" HorizontalAlignment="Center" 
                            KeyUp="PinBox_KeyUp" PasswordChar="*"/>
                <PasswordBox x:Name="PinBox4" Width="40" Height="40" FontSize="20" 
                            MaxLength="1" HorizontalAlignment="Center" Margin="10,0,0,0"
                            KeyUp="PinBox_KeyUp" PasswordChar="*"/>
            </StackPanel>

            <Label x:Name="MessageLabel" Grid.Row="2" 
                   Content="" Foreground="Red" 
                   HorizontalAlignment="Center" Margin="0,20,0,0"/>

            <Label x:Name="ForgotPinLabel" 
                   Content="Forgot PIN?"
                   Grid.Row="3"
                   Margin="0,10,0,0"
                   VerticalAlignment="Top"
                   Foreground="#FF673AB7"
                   FontSize="10"
                   MouseDown="ForgotPin"
                   HorizontalAlignment="Center"
                   Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Page>